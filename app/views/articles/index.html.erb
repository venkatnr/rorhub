<% if user_signed_in? %>
	<div id= "mainpagediv">
		All Articles
		<table border = 1>
			<tr>
				<th>
					Title
				</th>
				<th>
					Description
				</th>
				<th>
					Show
				</th>
			</tr>
				<%@article.each do |all|%>
				<tr>
					<td>
						<%= all.title%>
					 </td>
					 <td>
						<%= all.description%>
					 </td>
					 <td>
						<%= link_to "Read ..", new_article_comment_path( all.id )%>
					 </td>
				 </tr>
				<%end%>
		</table>
		<br />
		</div><br /><br />
		<%= will_paginate @article %><br>
		<%= link_to 'New Article',  new_user_article_path(current_user.id), :id => "buttonstyle", %>
<%else%>
		<h2>All Articles<h2>
		<div id= "mainpagediv">
		<table border = 1>
		<tr>
			<th>
				Title
			</th>
			<th>
				Description
			</th>
			<th>
				Make comment
			</th>
		</tr>
			<%@articles.each do |all|%>
			<tr>
				<td>
					<%= all.title%>
				 </td>
				 <td>
					<%= all.description%>
				 </td>
				  <td>
					<%= link_to "comment",  new_article_comment_path(all.id)%>
				 </td>
			 </tr>
			<%end%>	
		</table>
		</div>
	<br>	<%= will_paginate @article %>
<%end%>
<style>
#mainpagediv{
	border: 1px solid #999999;
	border-radius: 8px 8px 8px 8px;
    font-size: 95%;
    margin: 0;
    overflow: auto;
    padding: 10px;
    position: relative;
    -moz-box-shadow: 0px -1px 24px #000000;
    -webkit-box-shadow: 0px -1px 24px #000000;
    box-shadow: 0px -1px 24px #000000;
   }
   #buttonstyle
{
		-moz-user-select: none;
		border: medium none;
		border-radius: 5px 5px 5px 5px;
		box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
		color: #FFFFFF !important;
		cursor: pointer;
		display: inline-block;
		padding: 5px 10px !important;
		text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.25), -2px 0 1px rgba(0, 0, 0, 0.25);
		background-color: #015EA9;
		text-decoration:none;
}
   </style>


