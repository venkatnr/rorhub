<!DOCTYPE html>
<html>
<head>
  <title>Rorhub</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navigation">
  <% if user_signed_in? %>
    <span class = "textcolor"> Signed in as <%= current_user.email %> </span>
   <%= button_to "", destroy_user_session_path, :method => :delete, :id => "signout" %>
  <% else %>
    <%#= button_to "", new_user_registration_path, :id => "signup" %><%= button_to "", new_user_session_path, :id => "signin" %>
    <%= button_to "", user_omniauth_authorize_path(:google_oauth2) , :id => "googlesignin"%>  <%= button_to "", user_omniauth_authorize_path(:facebook) , :id => "facebooksignin"%>
  <% end %>
</div>
<%= yield %>

</body>
</html>
