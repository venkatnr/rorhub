<%= form_for [@article, @article.comments.build]  do |f| %>
  <div class="field">
    <%= f.label :c_title %><br />
    <%= f.text_field :c_title %>
  </div>
  <div class="field">
    <%= f.label :c_description %><br />
    <%= f.text_area :c_description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
